{
  "title": "Clusterlite Configuration File Schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "placements": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "type": "object",
          "additionalProperties": false,
          "required": [ "services" ],
          "properties": {
            "inherits": {
              "type": "string"
            },
            "services": {
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "seeds": {
                    "type": "integer",
                    "maximum": 10,
                    "exclusiveMaximum": true,
                    "minimum": 0,
                    "exclusiveMinimum": true
                  },
                  "ports": {
                    "type": "object",
                    "patternProperties": {
                      "^[1-9][0-9]*$": {
                        "type": "integer",
                        "maximum": 65535,
                        "exclusiveMaximum": true,
                        "minimum": 0,
                        "exclusiveMinimum": true
                      }
                    }
                  },
                  "blkio-weight": {
                    "type": "integer"
                  },
                  "cpu-shares": {
                    "type": "integer"
                  },
                  "cpus": {
                    "type": "number"
                  },
                  "cpuset-cpus": {
                    "type": "string",
                    "pattern": "^[0-9,-]+$"
                  },
                  "kernel-memory": {
                    "type": "string",
                    "pattern": "^[1-9][0-9]*[bkmg]$"
                  },
                  "memory": {
                    "type": "string",
                    "pattern": "^[1-9][0-9]*[bkmg]$"
                  },
                  "memory-swap": {
                    "type": "string",
                    "pattern": "^[1-9][0-9]*[bkmg]$"
                  },
                  "memory-swappiness": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 100
                  }
                }
              }
            }
          }
        }
      },
      "additionalProperties": false
    },
    "services": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "type": "object",
          "additionalProperties": false,
          "required": [ "image" ],
          "properties": {
            "dependencies": {
              "items": {
                "type": "string"
              },
              "type": "array",
              "uniqueItems": true
            },
            "environment": {
              "patternProperties": {
                "^[a-zA-Z0-9_-]+$": {
                  "type": "string",
                  "pattern": "^[^<>&$()%]+$"
                }
              },
              "type": "object"
            },
            "image": {
              "type": "string",
              "pattern": "^[a-zA-Z0-9_/.:-]+$"
            },
            "inspect": {
              "type": "string"
            },
            "probe": {
              "type": "string"
            },
            "repair": {
              "type": "string"
            },
            "stateless": {
              "type": "boolean"
            },
            "volumes": {
              "type": "object",
              "patternProperties": {
                "^[/][a-zA-Z0-9/.~$!]+$": {
                  "type": "string",
                  "pattern": "^[/][a-zA-Z0-9/.~$!:]+$"
                }
              }
            },
            "options": {
              "type": "string"
            },
            "command": {
              "type": "string"
            }
          }
        }
      },
      "additionalProperties": false
    }
  }
}