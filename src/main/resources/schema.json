{
  "title": "Clusterlite Configuration File Schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "placements": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "type": "object",
          "additionalProperties": false,
          "required": [ "services" ],
          "properties": {
            "inherits": {
              "type": "string"
            },
            "services": {
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "seeds": {
                    "type": "integer",
                    "maximum": 10,
                    "exclusiveMaximum": true,
                    "minimum": 0,
                    "exclusiveMinimum": true
                  },
                  "ports": {
                    "type": "object",
                    "patternProperties": {
                      "^[1-9][0-9]*$": {
                        "type": "integer",
                        "maximum": 65535,
                        "exclusiveMaximum": true,
                        "minimum": 0,
                        "exclusiveMinimum": true
                      }
                    }
                  },
                  "blkio-weight": {
                    "type": "integer"
                  },
                  "cpu-shares": {
                    "type": "integer"
                  },
                  "cpus": {
                    "type": "number"
                  },
                  "cpuset-cpus": {
                    "type": "string",
                    "pattern": "^[0-9,-]+$"
                  },
                  "kernel-memory": {
                    "type": "string",
                    "pattern": "^[1-9][0-9]*[bkmg]$"
                  },
                  "memory": {
                    "type": "string",
                    "pattern": "^[1-9][0-9]*[bkmg]$"
                  },
                  "memory-swap": {
                    "type": "string",
                    "pattern": "^[1-9][0-9]*[bkmg]$"
                  },
                  "memory-swappiness": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 100
                  }
                }
              }
            }
          }
        }
      },
      "additionalProperties": false
    },
    "services": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "type": "object",
          "additionalProperties": false,
          "required": [ "image" ],
          "properties": {
            "dependencies": {
              "patternProperties": {
                "^[a-zA-Z0-9_-]+$": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": [ "env" ],
                  "properties": {
                    "env": {
                      "type": "string",
                      "pattern": "^[^<>&$()%]+$"
                    }
                  }
                }
              },
              "type": "object"
            },
            "environment": {
              "patternProperties": {
                "^[a-zA-Z0-9_-]+$": {
                  "type": "string",
                  "pattern": "^[^<>&$()%]+$"
                }
              },
              "type": "object"
            },
            "files": {
              "additionalProperties": {
                "type": "string",
                "pattern": "^[-_/.A-Za-z0-9]+$"
              },
              "type": "object"
            },
            "image": {
              "type": "string",
              "pattern": "^[a-zA-Z0-9_/.:-]+$"
            },
            "inspect": {
              "type": "string"
            },
            "probe": {
              "type": "string"
            },
            "repair": {
              "type": "string"
            },
            "stateless": {
              "type": "boolean"
            },
            "volumes": {
              "type": "object",
              "patternProperties": {
                "^[/][a-zA-Z0-9/.~$!]+$": {
                  "type": "string",
                  "pattern": "^[/][a-zA-Z0-9/.~$!:]+$"
                }
              }
            },
            "logging": {
              "type": "object",
              "properties": {
                "driver": {
                  "type": "string",
                  "enum": [
                    "none",
                    "json-file",
                    "syslog",
                    "journald",
                    "gelf",
                    "fluentd",
                    "awslogs",
                    "splunk",
                    "etwlogs",
                    "gcplogs",
                    "logentries"
                  ]
                },
                "options": {
                  "type": "object",
                  "patternProperties": {
                    "^[a-zA-Z0-9-_]+$": {
                      "type": "string"
                    }
                  }
                }
              }
            },
            "capabilities": {
              "type": "object",
              "properties": {
                "add" : {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum" : [
                      "ALL",
                      "AUDIT_CONTROL",
                      "AUDIT_WRITE",
                      "BLOCK_SUSPEND",
                      "CHOWN",
                      "DAC_OVERRIDE",
                      "DAC_READ_SEARCH",
                      "FOWNER",
                      "FSETID",
                      "IPC_LOCK",
                      "IPC_OWNER",
                      "KILL",
                      "LEASE",
                      "LINUX_IMMUTABLE",
                      "MAC_ADMIN",
                      "MAC_OVERRIDE",
                      "MKNOD",
                      "NET_ADMIN",
                      "NET_BIND_SERVICE",
                      "NET_BROADCAST",
                      "NET_RAW",
                      "SETFCAP",
                      "SETGID",
                      "SETPCAP",
                      "SETUID",
                      "SYS_ADMIN",
                      "SYS_BOOT",
                      "SYS_CHROOT",
                      "SYSLOG",
                      "SYS_MODULE",
                      "SYS_NICE",
                      "SYS_PACCT",
                      "SYS_PTRACE",
                      "SYS_RAWIO",
                      "SYS_RESOURCE",
                      "SYS_TIME",
                      "SYS_TTY_CONFIG",
                      "WAKE_ALARM"
                    ]
                  }
                },
                "drop" : {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum" : [
                      "ALL",
                      "AUDIT_CONTROL",
                      "AUDIT_WRITE",
                      "BLOCK_SUSPEND",
                      "CHOWN",
                      "DAC_OVERRIDE",
                      "DAC_READ_SEARCH",
                      "FOWNER",
                      "FSETID",
                      "IPC_LOCK",
                      "IPC_OWNER",
                      "KILL",
                      "LEASE",
                      "LINUX_IMMUTABLE",
                      "MAC_ADMIN",
                      "MAC_OVERRIDE",
                      "MKNOD",
                      "NET_ADMIN",
                      "NET_BIND_SERVICE",
                      "NET_BROADCAST",
                      "NET_RAW",
                      "SETFCAP",
                      "SETGID",
                      "SETPCAP",
                      "SETUID",
                      "SYS_ADMIN",
                      "SYS_BOOT",
                      "SYS_CHROOT",
                      "SYSLOG",
                      "SYS_MODULE",
                      "SYS_NICE",
                      "SYS_PACCT",
                      "SYS_PTRACE",
                      "SYS_RAWIO",
                      "SYS_RESOURCE",
                      "SYS_TIME",
                      "SYS_TTY_CONFIG",
                      "WAKE_ALARM"
                    ]
                  }
                }
              },
              "additionalProperties": false
            },
            "options": {
              "type": "string"
            },
            "command": {
              "type": "array",
              "items": {
                "oneOf": [
                  { "type": "string" },
                  { "type": "number" },
                  { "type": "boolean" }
                ]
              },
              "minItems": 1
            }
          }
        }
      },
      "additionalProperties": false
    }
  }
}
